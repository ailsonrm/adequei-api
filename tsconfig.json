{
  "compilerOptions": {
    "target": "es6",                          
    "module": "commonjs",                     
    "lib": ["es6"],                             
    "allowJs": true,                       
    "outDir": "./dist",
    "sourceMap": true,
    "noImplicitAny": true,
    "jsx": "react",
    "rootDir": "./src",                       
    "removeComments": true,                
    "typeRoots": [
      "./node_modules/@types",
      "./src/@types"
    ], 
    "esModuleInterop": true,                  
    "resolveJsonModule": true,
    "experimentalDecorators": true,        
    "emitDecoratorMetadata": true,         
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true,  
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["./src/shared/*"],
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@database/*": ["./src/database/*"],
      "@models/*": ["./src/models/*"],
      "@schemas/*": ["./src/schemas/*"],
      "@services/*": ["./src/services/*"],
      "@utils/*": ["./src/utils/*"],
      "@routes/*": ["./src/routes/*"],
      "@resources/*": ["./src/resources/*"],
      "@views/*": ["./src/views/*"]      
    }
  },
  "include": [
    "src/**/*", "tests"
  ]
}
