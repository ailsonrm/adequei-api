{
  "compilerOptions": {
    "target": "es5",                          
    "module": "commonjs",                     
    //"lib": ["es6"],                             
    //"allowJs": true,                       
    "outDir": "./dist",
    "rootDir": "./src",    
    "strict": true,                   
    //"sourceMap": true,
    //"noImplicitAny": true,
    //"jsx": "react",
    //"removeComments": true,                
    //"typeRoots": [
    //  "./node_modules/@types",
    //  "./src/@types"
    //], 
    "esModuleInterop": true,
    //"resolveJsonModule": true,
    //"experimentalDecorators": true,
    //"emitDecoratorMetadata": true,
    //"skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": ".",
    "paths": {
      "@config/*": ["./src/config/*"],
      "@controllers/*": ["./src/controllers/*"],
      "@database/*": ["./src/database/*"],
      "@routes/*": ["./src/routes/*"],
      "@shared/*": ["./src/shared/*"],
      "@utils/*": ["./src/utils/*"],
      "@views/*": ["./views/*"]
    }
  },
  "include": [
    "src/**/*", "tests"
  ]
}
